<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextAppearance.CurrencyExchange.Body.Small"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.CurrencyExchange.Body.Medium"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.CurrencyExchange.Body.Large"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.CurrencyExchange.ToolbarTitle"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Widget.CurrencyExchange.AppBar"
        parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
